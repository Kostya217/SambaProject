<div class=" control-section">
    <div class="sample-container">
        <ejs-filemanager id="filemanager" allowDragAndDrop="true" allowMultiSelection="true" created="onCreated">
            <e-filemanager-ajaxsettings url="/Home/FileOperations"
                                        downloadUrl="/Home/Download"
                                        uploadUrl="/Home/Upload"
                                        getImageUrl="/Home/GetImage">
            </e-filemanager-ajaxsettings>
            <e-filemanager-uploadsettings maxFileSize="500000" autoUpload="true">
            </e-filemanager-uploadsettings>
        </ejs-filemanager>
    </div>
</div>

